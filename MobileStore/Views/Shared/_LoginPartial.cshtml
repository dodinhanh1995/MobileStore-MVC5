@model IEnumerable<Models.ViewModels.NavigationViewModel>



@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { @style="margin-top:5px;", id = "logoutForm", @class = "navbar-right center-block" }))
    {
        @Html.AntiForgeryToken()

        @Html.ActionLink(User.Identity.Name, "Index", "Manage", routeValues: null, htmlAttributes: new { @id="username-logged", @class = "login" })

        <a class="login" href="javascript:document.getElementById('logoutForm').submit()">(Thoát)</a>
    }
}
else
{
    foreach (var menu in Model)
    {
        <a class="login" href="@menu.Link" target="@menu.Target" title="@menu.Text">
            | @Html.Raw(menu.Icon) @menu.Text
        </a>
    }
}
