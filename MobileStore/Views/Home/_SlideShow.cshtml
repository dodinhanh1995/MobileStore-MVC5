@model Models.ViewModels.BannerViewModel

<div class="slide-left col-xs-8">
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            @for (int j = 0; j < Model.SlideShows.Count(); j++)
            {
                <li data-target="#myCarousel" data-slide-to="@j" class="@(j == 0 ? "active" : "")"></li>
            }
        </ol>

        <div class="carousel-inner">
            @{
                int i = 0;
            }
            @foreach (var slideShow in Model.SlideShows)
            {
                string active = string.Empty;
                i++;
                if (i == 1)
                {
                    active = " active";
                }
                <div class="item @active">
                    <a href="@slideShow.Link" target="@slideShow.Target" title="@slideShow.Name">
                        <img class="img-responsive" src="@slideShow.Image" alt="@slideShow.Name">
                    </a>
                </div>
            }
        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

</div>
<div class="slide-right col-xs-4">
    @foreach (var banner in Model.HomeBanners)
    {
        <div class="banner-item">
            <a href="@banner.Link" target="@banner.Target" title="@banner.Name">
                <img class="img-responsive" src="@banner.Image" alt="@banner.Name" />
            </a>
        </div>
    }
</div>