@model IEnumerable<Models.ViewModels.CartItemsViewModel>

@foreach (var item in Model)
{
    <!-- item -->
    <div id="row_@item.ProductId">
        <div class="col-sm-2 col-xs-5 text-center" style="padding: 0;">
            <a href="/dien-thoai-@item.MetaTitle-@item.ProductId">
                <img class="img-responsive" src="@item.Image" />
            </a>
            <button class="btn btn-xs btnRemoveItem" data-id="@item.ProductId">
                <i class="fa fa-times-circle"></i> Xóa
            </button>
        </div>

        <div class="col-sm-6 col-xs-7">
            <h2 class="small"><strong>@item.Name</strong></h2>
        </div>
        <div class="col-sm-4 col-xs-6 text-right">
                <p class="price" style="margin-top: 15px;">
                    @item.Price.ToString("N0")đ
                </p>
            <br />
            <div class="btn-group">
                <button class="btn btn-default btn-sm" onclick="shoppingCart.changeQuantity(@item.ProductId, false)">
                    <i class="fa fa-minus"></i>
                </button>
                <button class="btn btn-default btn-sm" id="item_count_@item.ProductId">@item.Count</button>
                <button class="btn btn-default btn-sm" onclick="shoppingCart.changeQuantity(@item.ProductId, true)">
                    <i class="fa fa-plus"></i>
                </button>
            </div>
        </div>
        <div class="clearfix"></div>
        <div><hr /></div>
    </div>
    <!-- ./ item -->
}