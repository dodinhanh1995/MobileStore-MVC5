@model Models.ViewModels.SendCodeViewModel
@{
    ViewBag.Title = "Chọn xác minh bảo mật 2 bước";
    Layout = "~/Views/Shared/_LayoutAccount.cshtml";
}

@using (Html.BeginForm("SendCode", "Account", new { ReturnUrl = Model.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" })) {
    @Html.AntiForgeryToken()
    @Html.Hidden("rememberMe", @Model.RememberMe)
    <h4>Gửi mã xác minh</h4>
    <hr />
    <div class="row">
        <div class="col-md-8">
            Chọn xác minh bảo mật 2 bước 
            @Html.DropDownListFor(model => model.SelectedProvider, Model.Providers)
            <input type="submit" value="Gửi" class="btn btn-default" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
