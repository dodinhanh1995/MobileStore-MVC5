@model Models.ViewModels.ForgotPasswordViewModel
@{
    ViewBag.Title = "Quên mật khẩu";
    Layout = "~/Views/Shared/_LayoutAccount.cshtml";
}

<div class="col-md-4 col-md-offset-4">
    <div class="login-panel panel panel-default" style="background-color:#fff">
        <div class="panel-heading">
            Quên mật khẩu
        </div>
        <div class="panel-body">

            @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary("", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Vui lòng nhập địa chỉ email" })
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-success" value="Lấy lại mật khẩu" />
                </div>
            }
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
