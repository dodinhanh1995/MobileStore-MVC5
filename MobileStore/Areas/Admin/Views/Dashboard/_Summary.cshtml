@model Models.ViewModels.SummarySatisticsViewModel

<div class="col bg-success col-xs-12">
    <h3><i class="fa fa-usd"></i></h3>
    <div class="text-right">
        @(Model.Revenue.HasValue ? Model.Revenue.Value.ToString("N0") : "0")đ
        <p>Tổng doanh thu</p>
    </div>
</div>
<div class="col bg-warning col-xs-12">
    <h3><i class="fa fa-money"></i></h3>
    <div class="text-right">
        @(Model.RevenueAverage.HasValue ? Model.RevenueAverage.Value.ToString("N0") : "0")đ
        <p>Doanh thu trung bình theo ngày</p>
    </div>
</div>
<div class="col bg-info col-xs-12">
    <h3><i class="fa fa-shopping-cart"></i></h3>
    <div class="text-right">
        @Model.TotalOrder
        <p>Tổng số đơn hàng</p>
    </div>
</div>
<div class="col bg-danger col-xs-12">
    <h3><i class="fa fa-mobile"></i></h3>
    <div class="text-right">
        @Model.TotalProduct
        <p>Tổng số sản phẩm</p>
    </div>
</div>
