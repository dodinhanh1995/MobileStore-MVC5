@model Models.EF.Footer

@{
    ViewBag.Title = "Quản lý footer";
}

<div class="row">
    <div class="col-lg-12">
        <h4 class="page-header">Quản lý footer</h4>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <!-- /.panel-heading -->
            <div class="panel-body">
                @using (Html.BeginForm("Edit", "Footer"))
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(model => model.Id)

                    @Html.ValidationSummary(false, "", new { @class = "text-danger" })

                    <p>
                        <button type="submit" class="btn btn-outline btn-success">
                            <i class="fa fa-floppy-o" aria-hidden="true"></i> Cập nhật
                        </button>
                        <a href="@Url.Action("Index", "Footer")" class="btn btn-outline btn-default">
                            <i class="fa fa-undo" aria-hidden="true"></i> Hủy bỏ
                        </a>
                    </p>
                    if (TempData["AlertMessage"] != null)
                    {
                        <div id="alertBox" class="alert alert-@TempData["AlertType"] text-center">
                            @Html.Raw(TempData["AlertMessage"])
                        </div>
                    }
                    <table class="table table-striped table-bordered table-hover">
                        <tbody>
                            <tr>
                                <td>
                                    @Html.TextAreaFor(model=> model.Content, new { @class="form-control" })
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    @Html.RadioButtonFor(model => model.Status, false) Khóa
                                    @Html.RadioButtonFor(model => model.Status, true) Kích hoạt
                                </td>
                            </tr>
                        </tbody>
                    </table>
                }
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->

@section scripts {
    <script>
        CKEDITOR.replace('Content');
    </script>
}