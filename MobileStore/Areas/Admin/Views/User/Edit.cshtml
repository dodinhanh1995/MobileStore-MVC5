@model Models.ViewModels.ApplicationUser

@{
    ViewBag.Title = "Cập nhật thông tin người dùng";
}



@using (Html.BeginForm())
{
    
    <div class="form-horizontal">
        <h3>Cập nhật thông tin người dùng</h3>
        <hr />
        
        <a href="@Url.Action("Index")"><i class="fa fa-backward"></i> Quay lại</a>

        @Html.HiddenFor(model => model.Id)

        @Html.Partial("_UserForm")

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-primary"><i class="fa fa-floppy-o" aria-hidden="true"></i> Lưu lại</button>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
