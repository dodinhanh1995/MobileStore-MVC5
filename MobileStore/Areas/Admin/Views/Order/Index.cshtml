@model PagedList.IPagedList<Models.ViewModels.OrderViewModel>

<link href="~/Content/PagedList.css" rel="stylesheet" />

@{
    ViewBag.Title = "Danh sách đơn đặt hàng";
}

<div class="row">
    <div class="col-lg-12">
        <h4 class="page-header">Danh sách đơn đặt hàng</h4>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <!-- /.panel-heading -->
            <div class="panel-body">
                @using (Ajax.BeginForm("Index", "Order", new AjaxOptions
                {
                    UpdateTargetId = "list-order"
                }))
                {
                    <div class="col-lg-5" style="padding-left:0; margin-bottom:10px">
                        <div class="input-group">
                            @Html.TextBox("searchString", ViewBag.CurrentFilter as string, new { @class = "form-control", @placeholder = "Tìm kiếm đơn hàng" })
                            <div class="input-group-btn">
                                <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                            </div>
                        </div>
                    </div>
                }
               
                @if (TempData["AlertMessage"] != null)
                {
                    <div id="alertBox" class="alert alert-@TempData["AlertType"] text-center"> @Html.Raw(TempData["AlertMessage"])</div>
                }
                <div id="list-order">
                    @Html.Partial("_ListOrder")
                </div>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
