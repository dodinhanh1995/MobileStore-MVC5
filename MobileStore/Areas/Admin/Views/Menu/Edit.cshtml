@model Models.EF.Menu

@{
    ViewBag.Title = "Cập nhật thông tin menu";
}

@using (Html.BeginForm())
{
    
    <div class="form-horizontal">
        <h3>Cập nhật thông tin menu</h3>
        <hr />
       
        @Html.HiddenFor(model => model.Id)

        @Html.Partial("_MenuForm")

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-primary"><i class="fa fa-floppy-o" aria-hidden="true"></i> Lưu lại</button>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
