@model Models.EF.Slide

@{
    ViewBag.Title = "Cập nhật thông tin quảng cáo";
}

@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <h4>Cập nhật thông tin quảng cáo</h4>
        <hr />
        
        @Html.Partial("_SlideForm")

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-primary"><i class="fa fa-floppy-o" aria-hidden="true"></i> Lưu lại</button>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
